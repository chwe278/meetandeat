<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateHEventActivity">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="421dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Switch
                android:id="@+id/switch_picnic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Picnic" />

            <EditText
                android:id="@+id/text_EventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date"
                android:text="Date"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/text_EventPostcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="Postcode"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/text_EventAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:text="Address"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <EditText
                android:id="@+id/textInput_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <EditText
                android:id="@+id/number_People"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:text="amount"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_People"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="People"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_Publish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publish" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>